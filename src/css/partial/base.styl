		display grid
		grid-template-columns 1fr
		grid-auto-rows auto
		grid-row-gap 20px
		align-items center
		
		.category-wrapper
			color #FFAD05
			display grid
			grid-template-columns 1fr 2fr
			grid-template-rows 1fr
			align-items center
			border-bottom dashed 1px #13073A
			padding 10px 0
			
			.category
