html
	background #FFE url(/css/images/folk-pattern-black.png) top center repeat; 
	
body
	margin 0 50px
	color #044389
	back-shadow()

header
	display grid
	grid-template-rows minmax(max-content, 150px)
	grid-row-gap 0
	align-items center
	background #55555570
	
	.header-top
		display grid
		grid-area header-top
		grid-template-columns 2fr 1fr 1fr 1fr
		grid-template-rows 2fr 1fr
		
		.header-logo
			grid-area logo
			justify-self center
			max-width 80%
			margin 20px 0	
			> img 
				max-height 150px
			
		.header-form
			grid-area form
			justify-self center
			align-self center
			
		.header-contacts-left
			display contents
			
			.tel-left
				padding-right 10px
				align-self end
				justify-self end
				grid-area tel-left
			
			.worktime
				justify-self end
				align-self center
				grid-area worktime
				padding-right 10px
				color white

			
		.header-contacts-right
			display contents 
			justify-items start
			padding-left 10px
			
			.region
				align-self center
				grid-area region
				padding-left 10px
				color white
				
			.tel-right
				padding-left 10px
				grid-area tel-right
				align-self end
	
		grid-template-areas "logo form tel-left tel-right" "logo form tel-left tel-right" "logo form worktime region"
								
		.header-text
			font-size 15px
		
	.header-slider
		margin-top 10px	
		grid-area header-slider
				
	.header-menu
		grid-area header-menu
		color color-nav-text
		font-size 25px
		>ul
			display grid
			grid-template-columns repeat(5, 1fr)
			margin 0
			align-items center
			width 100%
			padding 0
			
			for col in (1..5)
				>li:nth-child({col})
					grid-column-start col
					grid-column-end col+1
				
			.nav-tab
				height 3em
				display flex
				justify-self stretch
				align-items center
				text-align center
				list-style-type none
				
				border-right solid 1px color-nav-border
				linear-gradient(#7db9e8 , color-nav-background)
				
				>div
					width 100%
						
				&:hover, &:active
					linear-gradient(#044389 , #7db9e8)
					border-color color-nav-border_hover
			:last-child
				border-right none

	grid-template-areas "header-top" "header-slider" "header-menu"
	


footer
	background #55555570
	padding 25px
	display grid
	grid-template-rows repeat(2, auto)
	grid-template-columns repeat(2, auto)
	color white
	
	.footer-logo
		max-width 100%
		grid-row 1 / 2
		grid-column 1 / 2
		>img
			max-height 100px

	.footer-contacts
		justify-self end
		align-self center
		grid-row 1 / 2
		grid-column 2 / 3
		
		.footer-tel
			font-size 20px
		
	.footer-rights
		text-align center
		align-self start
		grid-row 2 / 3
		grid-column 1 / 3
		>p 
			font-size 13px
 

section
	diplay block
	padding 25px		
	border-top solid 2px color-primary-4
	background-color #7CAFC4
	
	
h2
	color color-primary-3	
	
.categories
	
	border-top none
	h1
		text-align center
	.container
		display grid
		width 100%
		grid-template-columns repeat(3, 1fr)
		grid-auto-rows 1fr
		grid-auto-flow row
		justify-items center
		
		.category
			>ul
				list-style none
				padding 0
				
				>li
					text-align center
			
			>h3
				color #13073A
				text-align center
				
			>img
				max-width 90%
				padding-left 5%
		
.info
	.container
		display grid
		grid-template-rows 1fr auto 2fr
		grid-template-columns 2fr 1fr
		
		.info-text
			grid-area info-text
		
		.info-subheading
			grid-area info-subheading
			>span
				color #13073A

		.info-advantages
			grid info-advantages
			
			
			.info-points
				padding-top 20px
				display grid
				grid-template-columns 1fr 1fr
				grid-auto-rows 1fr
				grid-auto-flow row
				grid-column-gap 5px
				
				.point
					display grid
					grid-template-columns 1fr 2fr
					grid-template-rows 1fr 1fr
					align-items center

					>img
						max-width 100%
						grid-row 1 / 3
						grid-column 1 / 2
						justify-self center
						
					>h3
						font-size 15px
						font-color color-secondary-2-3
						font-style ff-ss
						grid-area h3
					
					>p
						font-style ff-s
						font-size 13px
						font-color color-secondary-2-2
						grid-area p
					
					grid-template-areas "image h3" "image p"
					

		.info-photos
			grid-area info-photos
			
			.photos
				justify-items center
				width 100%
				display grid
				grid-auto-flow row
				grid-auto-rows 1fr
				
				>img
					padding-top 20px
					max-width 200px

		grid-template-areas "info-text info-photos" "info-subheading info-photos" "info-advantages info-photos"

@media(min-width: 1140px)
	.tel
		font-size 30px

@media(max-width: 768px)
	.tel
		font-size 20px

	header
		width 100%
		.header-top
			grid-template-rows 2fr 1fr 1fr
			grid-template-columns repeat(2, 1fr)
			grid-template-areas "logo form" "tel-left tel-right" "worktime region"
		
		
@media(max-width: 576px)
	.tel
		font-size 20px

	header
		.header-top
			grid-template-rows 2fr repeat(3, 1fr)
			grid-template-columns repeat(2, 1fr)
			grid-template-areas "logo logo" "form form" "tel-left tel-right" "worktime region"
	
	.info
		.container
			display grid
			grid-auto-rows auto
			grid-template-columns 1fr
			
			.info-text
				grid-area info-text
			
			.info-subheading
				grid-area info-subheading

			.info-advantages
				grid info-advantages
				
				
				.info-points
					display grid
					grid-template-columns 1fr
					grid-auto-rows 1fr
					grid-auto-flow row
					grid-column-gap 5px
			
			
			grid-template-areas "info-text" "info-subheading" "info-advantages" "info-photos" 

